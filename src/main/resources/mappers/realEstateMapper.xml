<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quiz.lesson03.dao.RealEstateDAO">
	<select id="selectRealEstateById" parameterType="int"
		resultType="com.quiz.lesson03.model.RealEstate">
		SELECT
		`id`
		`realtorId`
		`address`
		`area`
		`type`
		`price`
		`rentPrice`
		`createdAt`
		`updatedAt`
		FROM
		`real_estate`
		WHERE
		`id` = #{id}

		`rentPrice`&lt; #{rentPrice}
	</select>

	<insert id="insertRealEstate"
		parameterType="com.quiz.lesson03.model.RealEstate">
		INSERT INTO `real_estate`
		(
		`id`
		,`realtorId`
		,`address`
		,`area`
		,`type`
		,`price`
		,`rentPrice`
		,`createdAt`
		,`updatedAt`
		)
		VALUES
		(
		#{id}
		,#{realtorId}
		,#{address}
		,#{area}
		,#{type}
		,#{price}
		,#{rentPrice}
		,NOW()
		,NOW()
		)
	</insert>

</mapper>
